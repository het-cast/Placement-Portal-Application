@using PlacementPortal.BLL.Enums;
@{
    Layout = "_MainLayout";
}


<h3 class="text-center mb-4 my-2" style="color: #764ba2">
    Companies
  </h3>
<div class="w-100" id="TPOMainContainer">
    <div class="py-3">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-10">

            </div>
        </div>
    </div>

    <div class="row g-4 w-100" id="companyMainContainer">
        <!-- Accordion -->
        <div class="accordion mb-4" id="filterAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFilter">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
                        <i class="bi bi-sliders me-2"></i>
                        <h3 class="card-title mb-2">
                            <i class="bi bi-funnel-fill me-2"></i>
                            Job Search Filters
                        </h3>
                    </button>
                </h2>
                <div id="collapseFilter" class="accordion-collapse collapse" aria-labelledby="headingFilter"
                    data-bs-parent="#filterAccordion">
                    <div class="accordion-body">
                        <div class="container-fluid my-0 p-0">
                            <div class="row justify-content-center">
                                <div class="col-12">
                                    <div class="filter-card p-4 animate-on-load">
                                        <form id="filterForm" method="get">
                                            <div class="filter-section">
                                                <div class="row row-cols-3">
                                                    <div class="col">
                                                        <label class="form-label">
                                                            <i class="bi bi-building"></i> Company Name
                                                        </label>
                                                        <div class="input-group-custom">
                                                            <i class="bi bi-search input-icon"></i>
                                                            <input type="text" id="searchFilterProfile"
                                                                name="SearchTermJob" class="form-control with-icon"
                                                                placeholder="Enter company name..." />
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label">
                                                            <i class="bi bi-award"></i> Minimum CGPA
                                                        </label>
                                                        <input type="number" step="0.01" min="0" max="10"
                                                            name="MinCGPAFilter" class="form-control"
                                                            placeholder="e.g., 7.5" />
                                                        <small class="text-muted"><i class="bi bi-info-circle"></i>
                                                            On scale of 10</small>
                                                    </div>

                                                    <div class="col">
                                                        <label class="form-label">
                                                            <i class="bi bi-exclamation-triangle"></i> Maximum
                                                            Backlogs
                                                        </label>
                                                        <input type="number" step="1" min="0" max="20"
                                                            name="MaxBacklogsFilter" class="form-control"
                                                            placeholder="e.g., 2" />
                                                        <small class="text-muted"><i class="bi bi-info-circle"></i>
                                                            Active backlogs allowed</small>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Job Domain and Package -->
                                            <div class="filter-section">
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label">
                                                            <i class="bi bi-currency-rupee"></i> Package Range
                                                            (LPA)
                                                        </label>
                                                        <div class="d-flex align-items-center gap-2">
                                                            <input type="number" id="minPackageFilter" step="0.5"
                                                                min="0" max="100" name="MinPackage" class="form-control"
                                                                placeholder="Min (e.g., 3.5)" />
                                                            <div class="range-separator">to</div>
                                                            <input type="number" step="0.5" min="0" max="100"
                                                                name="MaxPackage" class="form-control"
                                                                placeholder="Max (e.g., 15)" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div
                                                class="d-flex flex-column flex-md-row justify-content-between align-items-stretch gap-3 pt-3">
                                                <button type="button" id="clearJobFilters"
                                                    class="btn btn-clear w-100 w-md-auto">
                                                    <i class="bi bi-arrow-clockwise me-2"></i> Clear All
                                                </button>

                                                <button type="submit" id="submitJobFilters"
                                                    class="btn btn-primary w-100 w-md-auto">
                                                    <i class="bi bi-search me-2"></i> Apply Filters
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 mt-4" id="resultsInfo" style="display: none;">
                        <div class="card-body text-center">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                <span id="resultsText">Filters applied successfully!</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 w-100" id="companiesFilteredListContainer">
            <!-- Cards Partial View will be rendered here -->
        </div>
    </div>
</div>


<div class="modal fade" id="jobModal" tabindex="-1" aria-labelledby="jobModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="jobModalLabel">
                    <i class="fas fa-briefcase"></i>
                    Job Openings
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="jobModalBody">
                <!-- Job listings will be rendered here -->
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateCompanyProfile" tabindex="-1" aria-labelledby="jobModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="jobModalLabel">
                    <i class="fas fa-briefcase"></i>
                    Update Job Profiles
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="jobModalBody">
                <!-- Job listings will be rendered here -->
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteCompanyModal" tabindex="-1" aria-labelledby="deleteCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteCompanyModalLabel">Delete Confirmation
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column align-items-center gap-3">
                <i class="fa-solid fa-triangle-exclamation modal-delete-icon p-3"></i>
                <span>Are You Sure you want to delete this Company ?</span>
            </div>
            <div class="modal-footer d-flex justify-content-center gap-2">
                <button type="button" class="company-delete-btn btn btn-secondary">Yes</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<Partial name="_validationScriptsPartial" />
@section Scripts {
    <script src="~/js/company.js"></script>
}